{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/esm/types",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES2017",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist/esm",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"]
}

